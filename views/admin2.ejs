<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Page - Lightweight</title>
</head>
<body>
    <h1>Admin Page</h1>
    <h2>Uploaded Images</h2>
    <ul>
        <% images.forEach(image => { %>
        <li>
            <img src="/static/<%= image %>" alt="Uploaded Image" width="100">
            <form action="/delete/<%= image %>" method="post">
                <button type="submit">Delete</button>
            </form>
        </li>
        <% }) %>
    </ul>
</body>
</html>
